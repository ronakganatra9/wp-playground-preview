{
  "manifest_version": 3,
  "name": "WP Playground Preview",
  "version": "1.0.0",
  "description": "Adds 'Try in Playground' and 'Add to Playground list' to WordPress.org plugin and theme pages. Build a list and open WordPress Playground with multiple plugins and a theme.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://wordpress.org/plugins/*",
        "https://wordpress.org/themes/*",
        "https://*.wordpress.org/plugins/*",
        "https://*.wordpress.org/themes/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://wordpress.org/*",
    "https://*.wordpress.org/*",
    "https://api.wordpress.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
